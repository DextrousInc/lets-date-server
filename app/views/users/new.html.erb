<h1>Register</h1>

<%= form_tag :action => 'create' do %>
<label for = "user_first_name">First name:
<%= text_field 'users', 'first_name' %></label>

<label for = "user_last_name">Last name:
<%= text_field 'users', 'last_name' %></label>

<label for = "user_email">Email:
<%= text_field 'users', 'email' %></label>

<label for = "user_password">Password:
<%= password_field 'users', 'password' %></label>

<label for = "user_password">Confirm Password:
<%= password_field 'users', 'password_confirmation' %></label>

<label for = "user_dob">DOB:
<%= date_field 'users', 'dob'%></label>

<label for = "user_gender">Gender:
  <%= radio_button 'users', 'gender', 'male' %> Male
  <%= radio_button 'users', 'gender', 'female' %> Female
</label>
<!--collection_select(:users, :subject_id, @subjects, :id, :name, prompt: true) -->
<label for = "user_preference">Preference:
  <%= radio_button 'users', 'preference', 'male' %> Male
  <%= radio_button 'users', 'preference', 'female' %> Female
</label>

<label for = "user_home_latititude">Latitude
<%= number_field 'users', 'home_latitude', :step => 0.00000001%></label>

<label for = "user_home_longitude">Longitude
<%= number_field 'users', 'home_longitude', :step => 0.00000001%></label>

<%= submit_tag "Create" , :class=>'button'%>

<% end -%>
<%= link_to 'Back', {:action => 'list'} %>
